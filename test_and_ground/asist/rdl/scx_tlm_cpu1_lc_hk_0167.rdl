#include "lc_msgdefs.h"
#include "lc_platform_cfg.h"

#define WPACKED (LC_MAX_WATCHPOINTS + 3) / 4
#define APACKED (LC_MAX_ACTIONPOINTS + 1)/2

TYPES
  RECORD SCX_CPU1_LC_WPPackedType	DESC="Watchpoint packed entry Record"
     UNION WPByteEntry	DESC="SCX CPU1 LC WP Packed Results data, 2 bits per WP"
       UB AllStatus	DESC="Byte Value for all 4 Watchpoints"
       UB WP0Result	DESC="Result of WP in bits 0 and 1",mask=%x03,DISCRETE,
			DRANGE=(0,1,2,3),DLABEL=("False","True","Error","Stale")
       UB WP1Result	DESC="Result of WP in bits 2 and 3",mask=%x0C,DISCRETE,
			DRANGE=(0,1,2,3),DLABEL=("False","True","Error","Stale")
       UB WP2Result	DESC="Result of WP in bits 4 and 5",mask=%x30,DISCRETE,
			DRANGE=(0,1,2,3),DLABEL=("False","True","Error","Stale")
       UB WP3Result	DESC="Result of WP in bits 6 and 7",mask=%xC0,DISCRETE,
			DRANGE=(0,1,2,3),DLABEL=("False","True","Error","Stale")
     END
  END

  RECORD SCX_CPU1_LC_APPackedType	DESC="Actionpoint packed entry Record"
     UNION APByteEntry	DESC="SCX CPU1 LC AP Packed Results data, 4 bits per AP"
       UB AllStatus	DESC="Byte Value for all 4 Watchpoints"
       UB AP0Result	DESC="Result of AP in lower 4 bits (0-3)",mask=%x03,
			DISCRETE, DRANGE=(0,1,2,3),DLABEL=("Pass","Fail",
			"Error","Stale")
       UB AP0State	DESC="State of AP in lower 4 bits (0-3)",mask=%x0C,
			DISCRETE,DRANGE=(0,1,2,3),DLABEL=("Not Used","Active",
			"Passive","Disabled")
       UB AP1Result	DESC="Result of AP in upper 4 bits (4-7)",mask=%x30,
			DISCRETE, DRANGE=(0,1,2,3),DLABEL=("Pass","Fail",
			"Error","Stale")
       UB AP1State	DESC="State of AP in upper 4 bits (4-7)",mask=%xC0,
			DISCRETE,DRANGE=(0,1,2,3),DLABEL=("Not Used","Active",
			"Passive","Disabled")
     END
  END
END_TYPES


PACKET P00A7 APID=0167, DESC="SCX CPU1 LC Telemetry Data Packet",
                        STALE = 36
#include "ccsds_header.rdl"
!
  UB   SCX_CPU1_LC_CMDPC                  DESC="SCX CPU1 LC Command Processed Counter",
                                          UNITS=Counts
!
  UB   SCX_CPU1_LC_CMDEC                  DESC="SCX CPU1 LC Command Error Counter",
                                          UNITS=Counts, YH=1, DOLIMIT
!
  UB   SCX_CPU1_LC_CURLCSTATE             DESC="SCX CPU1 LC Current LC application operating state",
                                          DISCRETE, DRANGE=(1,2,3,4),
                                          DLABEL=("Active","Passive","Disabled","Recover from CDS")
!
  UB   SCX_CPU1_LC_PAD1                   DESC="SCX CPU1 padding"
!
!  UB   SCX_CPU1_LC_WRRESULTS[WPACKED]     DESC="SCX CPU1 LC WP Packed Results data, 2 bits per WP"
  SCX_CPU1_LC_WPPackedType SCX_CPU1_LC_WRRESULTS[WPACKED] DESC="SCX CPU1 LC WP Packed Results data, 2 bits per WP"
!
!  UB   SCX_CPU1_LC_ARRESULTS[APACKED]     DESC="SCX CPU1 LC AP Packed Results data, 4 bits per AP"
  SCX_CPU1_LC_APPackedType SCX_CPU1_LC_ARRESULTS[APACKED]     DESC="SCX CPU1 LC AP Packed Results data, 4 bits per AP"
!
  UI   SCX_CPU1_LC_PASSRTSCNT             DESC="SCX CPU1 LC Total Count of RTS sequences not initiated because application state is passive"
!
  UI   SCX_CPU1_LC_WPSINUSE               DESC="SCX CPU1 LC How many WPs are currently in effect"
!
  UI   SCX_CPU1_LC_ACTIVEAPS              DESC="SCX CPU1 LC How many APs are currently active"
!
  UI SCX_CPU1_LC_PAD2                     DESC = "SCX CPU1 padding"
!
  ULI  SCX_CPU1_LC_APSAMPLECNT            DESC="SCX CPU1 LC Total Count of APs Sampled"
!
  ULI  SCX_CPU1_LC_MONMSGCNT              DESC="SCX CPU1 LC Total Count of Messages Monitored"
!
  ULI  SCX_CPU1_LC_RTSCNT                 DESC="SCX CPU1 LC Total Count of RTS Sequences Initiated"
!
!  END                !END APPEND RECORD FUNCTION
!
END
